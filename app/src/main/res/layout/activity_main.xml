<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/pregunta"
        android:layout_width="356dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="@string/questionlabel"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/respuesta1"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Res1"
        app:layout_constraintStart_toStartOf="@+id/pregunta"
        app:layout_constraintTop_toBottomOf="@+id/pregunta" />

    <Button
        android:id="@+id/respuesta2"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Res2"
        app:layout_constraintStart_toStartOf="@+id/respuesta1"
        app:layout_constraintTop_toBottomOf="@+id/respuesta1" />

    <Button
        android:id="@+id/respuesta3"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Res3"
        app:layout_constraintStart_toStartOf="@+id/respuesta1"
        app:layout_constraintTop_toBottomOf="@+id/respuesta2" />


    <Button
        android:id="@+id/respuesta4"
        android:layout_width="365dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Res4"
        app:layout_constraintStart_toStartOf="@+id/respuesta1"
        app:layout_constraintTop_toBottomOf="@+id/respuesta3" />

    <Button
        android:id="@+id/continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:backgroundTint="#808080"
        android:text="@string/continuar"
        app:layout_constraintStart_toStartOf="@+id/pregunta"
        app:layout_constraintTop_toBottomOf="@+id/pregunta"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:backgroundTint="#808080"
        android:text="@string/check"
        app:layout_constraintStart_toStartOf="@+id/pregunta"
        app:layout_constraintTop_toBottomOf="@+id/pregunta"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:backgroundTint="#808080"
        android:text="@string/reiniciar"
        app:layout_constraintEnd_toEndOf="@+id/pregunta"
        app:layout_constraintTop_toBottomOf="@+id/pregunta"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/leon"
        android:layout_width="103dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/pregunta"
        app:layout_constraintTop_toBottomOf="@+id/pregunta"
        app:srcCompat="@drawable/leon"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ardilla"
        android:layout_width="106dp"
        android:layout_height="95dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/leon"
        app:layout_constraintTop_toBottomOf="@+id/pregunta"
        app:srcCompat="@drawable/ardilla"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/panda"
        android:layout_width="109dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/leon"
        app:layout_constraintTop_toBottomOf="@+id/leon"
        app:srcCompat="@drawable/panda"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/tortuga"
        android:layout_width="100dp"
        android:layout_height="66dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/ardilla"
        app:layout_constraintTop_toBottomOf="@+id/ardilla"
        app:srcCompat="@drawable/tortuga"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/correcto"
        android:layout_width="355dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/pregunta"
        app:layout_constraintTop_toBottomOf="@+id/pregunta" />

    <TextView
        android:id="@+id/incorrecto"
        android:layout_width="357dp"
        android:layout_height="74dp"
        android:layout_marginTop="144dp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/pregunta"
        app:layout_constraintTop_toBottomOf="@+id/pregunta" />

</androidx.constraintlayout.widget.ConstraintLayout>